<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".camera.Basics">

    <TableLayout
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                >

                <ImageButton
                    android:gravity="center"
                    android:id="@+id/btn_cameras"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/camera"
                    android:layout_margin="8dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textSize="45sp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_cameras"
                    android:layout_marginTop="135dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_weight="1">

                <ImageButton
                    android:gravity="center"
                    android:id="@+id/btn_tensor"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/tensor"
                    android:layout_margin="8dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Money"
                    android:textSize="45dp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_tensor"
                    android:layout_marginTop="135dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_weight="1">

                <ImageButton
                    android:gravity="center"
                    android:id="@+id/btn_time"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/time"
                    android:layout_margin="8dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="45sp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_time"
                    android:layout_marginTop="135dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:layout_weight="1"

                >

                <ImageButton
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/btn_cameras"
                    android:layout_alignStart="@+id/btn_cameras"
                    android:id="@+id/btn_date"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/date"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="25dp"
                    tools:ignore="NotSibling" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="45sp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_date"
                    android:layout_marginTop="145dp"
                    android:gravity="center"
                    android:layout_alignStart="@id/btn_date"
                    android:layout_centerHorizontal="true"
                    android:layout_alignEnd="@id/btn_date"
                    />

            </RelativeLayout>
        </TableRow>
    </TableLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Listening to You..."
        android:textColor="@color/gray"
        android:textSize="60sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <ImageView

        android:id="@+id/img_wave"
        android:layout_width="720dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:src="@drawable/wave"

        />


    <ImageView
        android:gravity="center"
        android:id="@+id/img_wave2"
        android:layout_width="720dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:src="@drawable/wave"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:gravity="center"
        android:id="@+id/btn_talkb"
        android:layout_width="285dp"
        android:layout_height="285dp"
        android:background="@drawable/mic"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175dp"
        />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="text"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColorHint="@color/gray"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="100dp"
        android:textSize="45dp"/>




</RelativeLayout>