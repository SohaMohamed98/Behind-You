<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".camera.Internet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Listening to You..."
        android:textColor="@color/gray"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:id="@+id/img_wave"
        android:layout_width="480dp"
        android:layout_height="250dp"
        android:src="@drawable/wave"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/img_wave2"
        android:layout_width="480dp"
        android:layout_height="250dp"
        android:src="@drawable/wave"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        />


    <ImageButton
        android:id="@+id/btn_talki"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/mic"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="110dp"
        />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="text"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColorHint="@color/gray"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="50dp"
        android:textSize="40dp"/>




    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerHorizontal="true" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btn_map"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/maps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maps"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_map"
                    android:layout_marginTop="105dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_assistant"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/assistant"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assistant"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_assistant"
                    android:layout_marginTop="105dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/btn_chrome"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/chrome"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chrome"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_chrome"
                    android:layout_marginTop="105dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9">

                <ImageButton
                    android:id="@+id/btn_gmail"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/gmail"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignStart="@+id/btn_map"
                    android:layout_alignEnd="@+id/btn_map"
                    tools:ignore="NotSibling" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gmail"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:layout_alignTop="@+id/btn_gmail"
                    android:layout_marginTop="105dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_alignStart="@id/btn_gmail"
                    android:layout_alignEnd="@+id/btn_gmail"
                    />

            </RelativeLayout>
        </TableRow>


    </TableLayout>



</RelativeLayout>