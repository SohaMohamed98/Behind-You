<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".camera.Categories">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Listening to You..."
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />

    <ImageView
        android:id="@+id/img_wave"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/wave"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/img_wave2"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/wave"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        />


    <ImageButton
        android:id="@+id/btn_talk3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/mic"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="text"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColorHint="@color/gray"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:textSize="15dp"/>



    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_internet"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/internet"
                android:layout_margin="8dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/btn_internet"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_basics"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/basics"
                android:layout_margin="8dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basics"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/btn_basics"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_sounds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sounds" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sounds"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_alignTop="@+id/btn_sounds"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

    </TableRow>

</RelativeLayout>